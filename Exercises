name = "Monica"
age = 16
years_until_100 = 100 - age

print(f"Hello {name}, you will turn 100 in {years_until_100} years.")

# Below is an interactive version

name = input("Enter your name: ")
age = int(input("Enter your age: "))
years_until_100 = 100 - age

print(f"Hello {name}, you will turn 100 in {years_until_100} years.")
